v-org-users {
  display: flex;
  height: 100%;
  padding: 3rem;
  gap: 2rem;

  .card {
    width: 10rem;
  }

  .users-table-section {
    flex: 1;
    display: flex;
    flex-direction: column;
    gap: 1rem;

    .table-container {
      flex: 1;
      overflow: hidden;
      display: grid;

      .ui-table {
        .row {
          grid-template-columns: 1fr 10rem;
        }
      }
    }
  }
}
