@import "../../_common/pcss/ui-screen.pcss";

v-home {
	display: block;
}

.home-container {
	padding: 2rem;
	max-width: 1200px;
	margin: 0 auto;
}

.section {
	background: var(--bkg);
	border-radius: var(--br);
	padding: 2rem;
	box-shadow: var(--sh-elev-1);
	margin-bottom: 2rem;
}

.section h2 {
	margin: 0 0 1rem 0;
	color: var(--txt);
	font-size: 1.5rem;
	font-weight: 600;
}

.section p {
	margin: 0 0 1.5rem 0;
	color: var(--txt-sec);
	line-height: 1.6;
}
